{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.ts",
    "src/renderer/src/**/*.vue",
    "src/preload/*.d.ts",
    "src/shared/*",
    "src/shared/*.d.ts",
  ],
  "compilerOptions": {
    "allowJs": true,
    "strict": false,
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@shared/*": [
        "src/shared/*"
      ],
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
